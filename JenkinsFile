pipeline {
    agent any
    environment {
        AWS_ACCOUNT_ID = "588738609043"  // Change this to your AWS Account ID
        AWS_REGION = "eu-north-1a"  // Ensure this is only the region, not AZ
        ECR_REPO = "my-app-repo"  // Change to your ECR Repository name
        IMAGE_TAG = "latest"
        ECR_REGISTRY = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com"
    }
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/Nishita084/NODEVISTA.git'  // Change to your repo URL
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${ECR_REGISTRY}/${ECR_REPO}:${IMAGE_TAG} ."
                }
            }
        }
        stage('Push Image to ECR') {
            steps {
                script {
                    sh """
                        aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_REGISTRY}
                    """
                    sh "docker push ${ECR_REGISTRY}/${ECR_REPO}:${IMAGE_TAG}"
                }
            }
        }
    }
}
